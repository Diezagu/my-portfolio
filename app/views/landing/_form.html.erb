<%= form_with url: "#", class: 'flex justify-center p-2' do |f| %>
  <div class="flex flex-col justify-center w-5/12 gap-5">
    <div>
      <%= f.label :first_name, class: 'text-white' %>:<br>
      <%= f.text_field :first_name, class: 'w-full rounded' %>
    </div>

    <div>
      <%= f.label :last_name, class: 'text-white' %>:<br>
      <%= f.text_field :last_name, class: 'w-full rounded' %>
    </div>

    <div>
      <%= f.label :email, class: 'text-white' %>:<br>
      <%= f.email_field :email, class: 'w-full rounded' %>
    </div>

    <div>
      <%= f.label :comments, 'Comments/Qestions', class: 'text-white' %>:<br>
      <%= f.text_area :comments, class: 'w-full rounded' %>
    </div>

    <div>
      <%= f.submit 'Send', class: 'bg-gray-400 cursor-pointer hover:bg-gray-700 rounded px-3 py-2 text-white shadow-md shadow-gray-800' %>
    </div>
  </div>
<% end %>